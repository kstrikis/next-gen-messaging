# Server Configuration
PORT=3001
NODE_ENV=development
API_VERSION=v1
CORS_ORIGIN=http://localhost:3000

# Database Configuration
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/chatgenius?schema=public"
DATABASE_SSL=false

# Authentication (Auth0)
AUTH0_DOMAIN=your-domain.auth0.com
AUTH0_CLIENT_ID=your-client-id
AUTH0_CLIENT_SECRET=your-client-secret
AUTH0_AUDIENCE=https://api.chatgenius.com
AUTH0_CALLBACK_URL=http://localhost:3000/callback

# AWS Configuration
AWS_REGION=us-east-1
AWS_S3_BUCKET=chatgenius-files

# Redis Configuration (for caching)
REDIS_URL=redis://localhost:6379

# Logging
LOG_LEVEL=debug
LOGROCKET_APP_ID=your-logrocket-app-id

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Security
JWT_SECRET=replace-with-secure-secret
COOKIE_SECRET=replace-with-secure-secret
SESSION_SECRET=replace-with-secure-secret

# OpenAI Configuration (for AI features)
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-4

# Socket.IO Configuration
SOCKET_PATH=/socket.io
WS_PORT=3002

# Note: Replace all placeholder values with actual values in your .env file
# Never commit the actual .env file to version control 